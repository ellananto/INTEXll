@model BurialsViewModel

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">Burial Records</span>
    </div>

    <div class="row m-1 p-1">

        <div id="types" class="col-3">
            <div id="types" class="col-3">
                <vc:types-view-components></vc:types-view-components>
            </div>
        </div>

        <div class="col-9">
            <div>
                @foreach (Burialmain b in Model.Burials)
                {
                    <partial name="BurialSummary" model="b" />
