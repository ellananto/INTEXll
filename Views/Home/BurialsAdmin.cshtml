@model BurialsViewModel

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">Manage Burial Records</span>
    </div>
    <p>The data displayed below are records of various categories of information gathered about a collection of burials that have been uncovered.You can add, remove, and edit records as you see fit.</p>
    <div class="row">
        <div class="col-9">
            <div>
                @foreach (Burialmain b in Model.Burials)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Burial ID</th>
                                <th>Depth</th>
                                <th>Preservation</th>
                                <th>Burial Number</th>
                                <th>Excavation Year</th>
                                <th>Wrapping</th>
                                <th>West to Head</th>
                                <th>Age at Death</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@b.Id</td>
                                <td>@b.Depth</td>
                                <td>@b.Preservation</td>
                                <td>@b.Burialnumber</td>
                                <td>@b.Fieldbookexcavationyear</td>
                                <td>@b.Wrapping</td>
                                <td>@b.Westtohead</td>
                                <td>@b.Ageatdeath</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Home" asp-action="EditRecordForm" asp-route-recordid="@b.Id">Edit</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

    <div page-model="" page-blah="@Model.PageInfo" page-action="Burials" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-class-enabled="true" class="btn-group pull-right m-1"></div>
</body>
